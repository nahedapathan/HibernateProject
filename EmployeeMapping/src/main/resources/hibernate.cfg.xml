<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>

	<session-factory>

		<!-- Database connection settings -->

		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>

		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/employeemapping</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">tiger</property>

		<!-- SQL dialect -->

		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- Show SQL commands in console (set to true for debugging) -->
		<property name ="hibernate.show_sql">true</property>
		<property name =" hibernate.format_sql ">true</property>
		
		<!-- Automatically create /update tables**automatically manages the 
				database -->
		<property name="hibernate.hbm2ddl.auto">update</property>

		<mapping class="code.Employee" />
		<mapping class="code.Department" />
		<mapping class="code.Phone" />
		<mapping class="code.Project" />

	</session-factory>
</hibernate-configuration>